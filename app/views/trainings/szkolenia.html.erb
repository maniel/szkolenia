<h1>Lista szkoleń</h1>

<table>
  <thead>
    <tr>
      <th>Nazwa szkolenia</th>
      <th>Data rozpoczęcia</th>
      <th>Czas trwania</th>
      <th>Lokalizacja (powiat)</th>
      <th>Płatne</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @trainings.each do |training| %>
      <tr>
        <td><%= link_to training.name, training %></td>
        <td><%= training.begin_date %></td>        
        <td><%= training.term_info %></td>        
        <td><%= training.location.name %></td>
        <td><%= training.paid ? "Tak" : "Nie" %></td>
        <td><%= link_to 'edytuj', edit_training_path(training) %></td>
        <td><%= link_to 'usuń', training, method: :delete, data: { confirm: 'Jesteś pewien?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<h1>Lista organizatorów</h1>

<table>
  <thead>
    <tr>
      <th>Nazwa</th>
      <th>Adres</th>
      <th>Kontakt</th>
      <th>WWW</th>
      <th>Uczelnia</th>
  <% if signed_in? %>
      <th></th>
      <th></th>
  <% end %>
    </tr>
  </thead>

  <tbody>
	<% @organizers.each do |organizer| %>
	  <tr>
	    <td><%= link_to organizer.name, organizer %></td>
	    <td><%= organizer.address %></td>
	    <td><%= organizer.contact %></td>
	    <td><%= organizer.link %></td>
	    <td><%= organizer.college ? "Tak" : "Nie" %></td>
	<% if signed_in? %>
	    <td><%= link_to 'Edytuj', edit_organizer_path(organizer) %></td>
	    <td><%= link_to 'Usuń', organizer, method: :delete, data: { confirm: 'Jesteś pewien?' } %></td>
	<% end %>    
	  </tr>
	<% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nowy organizator', new_organizer_path if signed_in? %>

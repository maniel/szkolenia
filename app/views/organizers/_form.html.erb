<%= form_for(@organizer) do |f| %>
  <% if @organizer.errors.any? %>
    <div id="error_explanation">
      <h2><%= "#{@organizer.errors.count} błędów" %> przeszkodziło w zachowaniu danych:</h2>

      <ul>
      <% @organizer.errors.messages.each do |msg| %>
        <li><%= msg[1][0] %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, "Nazwa organizatora/uczelni" %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :address, "Adres organizatora/uczelni" %><br>
    <%= f.text_area :address %>
  </div>
  <div class="field">
    <%= f.label :contact, "Dane kontaktowe" %><br>
    <%= f.text_area :contact %>
  </div>
  <div class="field">
    <%= f.label :link, "Adres WWW organizatora/uczelni" %><br>
    <%= f.text_field :link %>
  </div>
  <div class="field">
    <%= f.label :college, "Uczelnia" %><br>
    <%= f.check_box :college %>
  </div>
  <div class="actions">
    <%= f.submit "Zapisz" %>
  </div>
<% end %>

<h1>Lista trenerów</h1>

<table class="normal">
  <thead>
    <tr>
      <th>Imie i nazwisko</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @trainers.each do |trainer| %>
      <tr>
        <td><%= link_to trainer.name, trainer %></td>
        <td class="nolink"><%= link_to 'Edytuj', edit_trainer_path(trainer) %> | <%= link_to 'Usuń', trainer, method: :delete, data: { confirm: 'Jesteś pewien?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>